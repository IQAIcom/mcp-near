{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": ["node_modules/**", "dist/**"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": {
					"level": "off"
				}
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	}
}
